<!DOCTYPE html>
<html lang="en">
<head>
  {{>head title='AnimeJS Example' showScripts=showScripts}}
</head>
<body>
  <!-- Header -->
  {{>header}}

  <!-- Main Content -->
  <main>
      {{#each items}}
      <div class="demo-container">
        <div class="demo-content">
          {{#if timelineItems}}
          <animated-timeline {{#if className}}class="{{className}}"{{/if}} {{#if as}}as="{{as}}"{{/if}}>
            {{#each timelineItems}}
            <animated-element {{#if className}}class="{{className}}"{{/if}} {{#if opacity}}opacity="{{opacity}}"{{/if}} {{#if translateX}}translate-x="{{translateX}}"{{/if}} {{#if translateY}}translate-y="{{translateY}}"{{/if}} {{#if scale}}scale="{{scale}}"{{/if}}>
            </animated-element>
            {{/each}}
          </animated-timeline>
          {{else}}
          <animated-element {{#if className}}class="{{className}}"{{/if}} {{#if opacity}}opacity="{{opacity}}"{{/if}} {{#if translateX}}translate-x="{{translateX}}"{{/if}} {{#if translateY}}translate-y="{{translateY}}"{{/if}} {{#if scale}}scale="{{scale}}"{{/if}}>
          </animated-element>
          {{/if}}
        </div>
      </div>
      {{/each}}
  </main>

  <!-- Footer -->
  {{>footer showScripts=showScripts}}
</body>
</html>
