<!DOCTYPE html>
<html lang="en">
<head>
  {{>head title='Parallax Demo' showScripts=showScripts}}
</head>
<body>
  <!-- Header -->
  {{>header}}

  <!-- Main Content -->
  <main class="parallax-demo__container">
      {{#each pictures}}
        <div class="overflow-hidden fit-content">
          <animated-element scrub {{#if opacity}}opacity="{{opacity}}"{{/if}} {{#if translateX}}translate-x="{{translateX}}"{{/if}} {{#if translateY}}translate-y="{{translateY}}"{{/if}} {{#if scale}}scale="{{scale}}"{{/if}} inview-offset="{{../offset}}">
              {{>picture}}
          </animated-element>
        </div>
      {{/each}}
  </main>

  <!-- Footer -->
  {{>footer showScripts=showScripts}}
</body>
</html>
